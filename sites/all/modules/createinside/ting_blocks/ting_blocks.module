/**
 * Community stats - block view
 */
function ting_blocks_community_stats_view() {
	
	$output = "";
	$output .= "<div class='image'><img src='".drupal_get_path("theme","ting")."/img/danmarkskort.png' /></div>";
	$output .= "<div class='text'><div>".variable_get('community_stats_text', '')."</div></div>";
	$output .= "<div class='stats'>";
	$output .= "<div><strong>".ting_blocks_get_community_stats("partners")."</strong><span>Off. partnere</span></div>";
	$output .= "<div><strong>".ting_blocks_get_community_stats("suppliers")."</strong><span>Leverand√∏rer</span></div>";
	$output .= "<div><strong>".ting_blocks_get_community_stats("members")."</strong><span>Medlemmer</span></div>";
	$output .= "<div><strong>".ting_blocks_get_community_stats("projects")."</strong><span>Projekter</span></div>";
	$output .= "<div><strong>".ting_blocks_get_community_stats("events")."</strong><span>Events</span></div>";
	$output .= "</div>";
	
	return $output;
}

function ting_blocks_get_community_stats($type) {
	
	switch($type) {
		case "members":
			$query = new EntityFieldQuery();
			$query
				->entityCondition('entity_type', 'user')
			  ->propertyCondition('status', 1);
			$result = $query->count()->execute();
		break;
		case "projects": 
			$query = new EntityFieldQuery();
			$query
				->entityCondition('entity_type', 'node')
				->entityCondition('bundle', 'project')
			  ->propertyCondition('status', 1);
			$result = $query->count()->execute();
		break;
		case "events": 
			$query = new EntityFieldQuery();
			$query
				->entityCondition('entity_type', 'node')
				->entityCondition('bundle', 'event')
			  ->propertyCondition('status', 1);
			$result = $query->count()->execute();
		break;
		case "suppliers":
			$query = new EntityFieldQuery();
			$query
				->entityCondition('entity_type', 'node')
				->entityCondition('bundle', 'supplier')
			  ->propertyCondition('status', 1);
			$result = $query->count()->execute();	
		break;
		case "partners":
			$query = new EntityFieldQuery();
			$query
				->entityCondition('entity_type', 'node')
				->entityCondition('bundle', 'public_partner')
			  ->propertyCondition('status', 1);
			$result = $query->count()->execute();	
		break;
	}
	return (isset($result) ? $result : FALSE);
}